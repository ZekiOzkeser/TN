@model TN.Models.Extended.UserLogin
@{
    ViewBag.Title = "Giris";
     Layout = "~/Views/Shared/_LayoutKul.cshtml";
}



<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container">
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="@Url.Action("Index","Home")">
                            <img src="~/Content/img/logo-zek.png" alt="teklifinedir" height="120px" width="60px">
                        </a>
                    </div>
                    <div class="login-form">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                @if (ViewBag.Message != "")
                                {
                                    <div class="text-danger">*@ViewBag.Message</div>
                                }
                                <form action="" method="post">
                                    <div class="form-group">
                                        <label>E-mail</label>
                                        @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label>Şifre</label>
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="login-checkbox" >
                                        <label>
                                            @Html.CheckBoxFor(model => model.RememberMe, new { htmlAttributes = new { @id = "chkbx" } }) Beni Hatırla
                                        </label>
                                        <label>
                                            <a href="@Url.Action("ForgotPassword","User")">Şifremi Unuttum?</a>
                                        </label>
                                    </div>
                                    <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Giriş</button>

                                </form>
                            </div>
                        }
                        <div class="register-link">
                            <p>
                                Hesabınız yok mu?
                                <a href="@Url.Action("Registration","User")">Buradan Kayıt Olun</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

