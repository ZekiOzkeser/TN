
@{
    ViewBag.Title = "Şifremi Unuttum";
  Layout = "~/Views/Shared/_LayoutKul.cshtml";
}

<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container">
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <img src="~/Content/img/logo-zek.png" alt="teklifinedir" height="120px" width="60px">
                        </a>
                    </div>
                    <div class="login-form">
                        @using (Html.BeginForm())
                        {
                        <form action="" method="post">
                            <div class="text-success">
                                @ViewBag.Message
                            </div>
                            <div class="form-group">
                                <label>E-mail Adresiniz</label>
                                @Html.TextBox("EmailID", "", new { @class = "form-control" })
                            </div>
                            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Gönder</button>
                        </form>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
