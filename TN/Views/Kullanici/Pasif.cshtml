@model  IEnumerable<TN.Models.Urunler>

@{
    ViewBag.Title = "Pasif";
    Layout = "~/Views/Shared/_LayoutKul.cshtml";
}
@Html.Action("HeaderMobile", "Kullanici")

@Html.Action("HeaderDesktop", "Kullanici")


<div class="page-content--bgf7">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="title-5 m-b-35">Yayında Olmayanlar</h3>
                        <div class="table-data__tool">
                            <div class="table-data__tool-right">
                                <a class="au-btn au-btn-icon au-btn--green au-btn--small" href="@Url.Action("UrunEkle","Post")">
                                    <i class="zmdi zmdi-plus"></i>Ürün Ekle
                                </a>
                            </div>
                        </div>
                        <div class="table-responsive table-responsive-data2">
                            <table class="table table-data2">
                                <thead>
                                    <tr>
                                        <th>İlan No</th>
                                        <th>Başlık</th>
                                        <th>Yayın Durumu</th>
                                        <th>Kategori</th>
                                        <th>Durum</th>
                                        <th>İlan Başlangıç</th>
                                        <th>İlan Bitiş</th>
                                        <th>Alt Limit</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="tr-shadow">
                                            <td>@item.UrunId</td>
                                            <td>
                                                @item.Baslik
                                            </td>
                                            <td>
                                                @item.Yayın
                                            </td>
                                            <td>@item.Kategoriler.KategoriAdi</td>
                                            <td>@item.Durum.Durumu</td>
                                            <td>@item.UrunOlusturma</td>
                                            <td>@item.UrunBitisTarihi</td>
                                            <td>@item.AltLimit <i class="fa fa-try"></i></td>
                                            <td>
                                                <div class="table-data-feature">
                                                    <a class="item" data-toggle="tooltip" data-placement="top" title="Detay" href="@Url.Action("DetayUrun","Kullanici",new { id=item.UrunId})">
                                                        <i class="zmdi zmdi-mail-send"></i>
                                                    </a>
                                                    <a class="item" data-toggle="tooltip" data-placement="top" title="Düzenle" href="@Url.Action("UrunDuzenle","Post",new { id=item.UrunId})">
                                                        <i class="zmdi zmdi-edit"></i>
                                                    </a>
                                                    <button class="SilPasif item" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete" data-target="#exampleModal" name="@item.UrunId">
                                                        <i class="zmdi zmdi-delete"></i>
                                                    </button>
                                                    <a class="item" data-toggle="tooltip" data-placement="top" title="Kaldır">
                                                        <i class="zmdi zmdi-more"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Action("AltMenu")

@section scripts{
    @if (TempData["msg"] != null)
    {
        <script>
        $.alert({
            title: '',
            content: '@TempData["msg"]',
        });

        </script>
    }

}
