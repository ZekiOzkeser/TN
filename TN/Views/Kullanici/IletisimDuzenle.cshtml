@model TN.Models.Iletisim
@{
    ViewBag.Title = "Iletisim Duzenle";
    Layout = "~/Views/Shared/_LayoutKul.cshtml";
}


@Html.Action("HeaderMobile", "Kullanici")

@Html.Action("HeaderDesktop", "Kullanici")


<div class="page-content--bgf7">
    <div class="main-content">
        <div class="section__content--p35">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <div class="au-card">
                            <div class="card-body card-block">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        <h4>Bilgi Duzenle</h4>
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.IletisimId)


                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Tel, "Telefon", htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-6">
                                                @Html.EditorFor(model => model.Tel, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            @Html.LabelFor(m => m.Adres, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-6">
                                                @Html.TextAreaFor(m => m.Adres, new { @class = "form-control", @rows = 3 })
                                                @Html.ValidationMessageFor(m => m.Adres, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            @Html.Label("İl", new { @class = "control-label col-md-2" })
                                            <div class="col-md-6">
                                                <select class="form-control-sm form-control" name="il" id="il"></select>
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            @Html.Label("İlçe", new { @class = "control-label col-md-2" })
                                            <div class="col-md-6">
                                                <select class="form-control-sm form-control" name="ilce" id="ilce" disabled>
                                                    <option>Bir İl Seçiniz</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-8">
                                                <input type="submit" value="Düzenle" class="btn btn-default" />
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Action("AltMenu")

@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
   
    @if (TempData["msg"] != null)
    {
        <script>
        $.alert({
            title: '',
            content: '@TempData["msg"]',
        });

        </script>
    }
}



