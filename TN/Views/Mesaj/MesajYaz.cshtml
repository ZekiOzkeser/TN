@model TN.Models.Mesaj

<div class="modal-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Yeni Mesaj</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label">Kime :</label>
                    <input type="text" class="form-control" id="recipient-name" name="kime">
                </div>
                <div class="form-group">
                    <label for="message-text" class="col-form-label">Mesaj:</label>
                    <textarea class="form-control" id="message-text" name="mesaj" required></textarea>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
            <button type="submit" class="btn btn-primary">Mesaj Yolla</button>
        </div>
    }
</div>


@section scripts{
@if (TempData["msg"] != null) { <script>$.alert({title:'',content:'@TempData["msg"]',});</script> }

}

