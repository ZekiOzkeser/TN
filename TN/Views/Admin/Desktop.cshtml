@using TN.Models


<header class="header-desktop3 d-none d-lg-block">
    <div class="section__content section__content--p35">
        <div class="header3-wrap">
            <div class="header__logo">
                <a href="@Url.Action("UrunIndex","Kullanici")">
                    <img src="~/Content/img/yazi.png" alt="teklifiNedir">
                </a>
            </div>
            <div class="header__navbar">
                <ul class="list-unstyled">
                    <li class="has-sub">
                        <a href="@Url.Action("Kategoriler","Admin")">
                            <i class="fas fa-copy"></i>Kategoriler
                            <span class="bot-line"></span>
                        </a>
                        <ul class="header3-sub-list list-unstyled">
                            <li><a href="@Url.Action("Kategoriler","Admin")">Tüm Kategoriler</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("KategoriEkle","Admin")">
                            <i class="fas fa-asterisk"></i>
                            <span class="bot-line"></span>Kategoriler
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Durum","Admin")">
                            <i class="fas fa-backward"></i>
                            <span class="bot-line"></span>Durumlar
                        </a>
                        <ul class="header3-sub-list list-unstyled">
                            <li>
                                <a href="@Url.Action("DurumEkle","Admin")">
                                    Durum
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fas fa-bolt"></i>
                            <span class="bot-line"></span>Açık Artırmalar
                        </a>
                    </li>
                    <li class="has-sub">
                        <a href="#">
                            <i class="fas fa-copy"></i>
                            <span class="bot-line"></span>Ürünler
                        </a>
                        <ul class="header3-sub-list list-unstyled">
                            <li>
                                <a href="@Url.Action("Aktif","Admin")">Aktif Ürünler</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Pasif","Admin")">Pasif Ürünler</a>
                            </li>
                        </ul>
                    </li>
                    <li class="has-sub">
                        <a href="@Url.Action("Kullanicilar","Admin")">
                            <i class="fas fa-desktop"></i>
                            <span class="bot-line"></span>Tüm Kullanıcılar
                        </a>
                    </li>
                </ul>
            </div>
            <div class="header__tool">
                <div class="account-wrap">
                    <div class="account-item account-item--style2 clearfix js-item-menu">
                        <div class="image">
                            <img src="~/Content/img/logo.png" alt="zZEk">
                        </div>
                        <div class="content">
                            <a class="js-acc-btn" href="#">@(((User)Session["user"]).FirstName)</a>
                        </div>
                        <div class="account-dropdown js-dropdown">
                            <div class="info clearfix">
                                <div class="image">
                                    <a href="#">
                                        <img src="~/Content/img/logo.png" alt="zZEk" />
                                    </a>
                                </div>
                                <div class="content">
                                    <h5 class="name">
                                        <a href="#">@(((User)Session["user"]).FullName)</a>
                                    </h5>
                                    <span class="email">@(((User)Session["user"]).EmailID)</span>
                                </div>
                            </div>
                            <div class="account-dropdown__body">
                                <div class="account-dropdown__item">
                                    <a href="@Url.Action("Bilgilerim","Kullanici")">
                                        <i class="zmdi zmdi-account"></i>Bilgilerim
                                    </a>
                                </div>
                                <div class="account-dropdown__item">
                                    <a href="@Url.Action("BilgiDuzenle","Kullanici")">
                                        <i class="zmdi zmdi-settings"></i>Ayarlar
                                    </a>
                                </div>
                                <div class="account-dropdown__item">
                                    <a href="@Url.Action("IletisimDuzenle","Kullanici")">
                                        <i class="zmdi zmdi-money-box"></i>Adres Bilgileri
                                    </a>
                                </div>
                            </div>
                            <div class="account-dropdown__footer" style="color:#b70202">
                                @if (Request.IsAuthenticated)
                                {
                                    using (Html.BeginForm("Logout", "User", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        <a href="javascript:document.getElementById('logoutForm').submit()">
                                            <i class="zmdi zmdi-power"></i>Çıkış
                                        </a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
